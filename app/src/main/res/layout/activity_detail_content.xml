<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/gambar_konten"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="#000000"
        android:layout_gravity="center_horizontal"
        android:padding="1dp" />

        <TextView
            android:id="@+id/namalabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama pariwisata" />

        <TextView
            android:id="@+id/alamatlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alamat pariwisata" />
    <TextView
        android:id="@+id/detaillabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail pariwisata" />


    <TextView
        android:id="@+id/eventlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="event" />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_go_maps"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go maps"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/recyclerViewKuliner"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/recyclerViewPenginapan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>